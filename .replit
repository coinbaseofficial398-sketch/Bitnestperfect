modules = ["nodejs-20", "web", "postgresql-16"]
run = "npm run dev"
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "static"
publicDir = "dist/public"
build = ["sh", "-c", "npm run build"]
run = ["sh", "-c", "node dist/index.js"]

[[deployment.rewrites]]
from = "/*"
to = "/index.html"

[env]
PORT = "5000"

[workflows]
runButton = "Development Server"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Start application"

[[workflows.workflow]]
name = "Start application"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[[workflows.workflow]]
name = "Development Server"
author = 46497915
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "pkill -f \"node.*server/index.ts\" || true"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[[ports]]
localPort = 5000
externalPort = 80

[agent]
integrations = ["javascript_websocket==1.0.0", "javascript_mem_db==1.0.0"]
